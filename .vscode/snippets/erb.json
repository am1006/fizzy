{
  // Place your snippets for erb here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "ERB Insert": {
    "prefix": "ei",
    "body": "<%= $0 %>",
    "description": "Insert ERB rendering tags"
  },
  "ERB Expression": {
    "prefix": "ex",
    "body": "<% $0 %>",
    "description": "Insert ERB expression tags"
  },
  "ERB Comment": {
    // However, no need to use this, just use cmd + / to comment out
    "prefix": "ec",
    "body": "<%# $0 %>",
    "description": "Insert ERB comment tags"
  },
  "HTML comment": {
    "prefix": "hc",
    "body": "<!-- $TM_SELECTED_TEXT$0 -->",
    // What if I want to simulate the default comment shortcut?
    // i.e., to replace the entire line with a comment, regardless of whether there is a selection
    // "body": "${TM_CURRENT_LINE/.*/<-- $TM_CURRENT_LINE -->/ }$0",
    "description": "Insert HTML comment"
  },
  "each": {
    "prefix": "each",
    "body": "\n<% ${1:@things}.each do |${2:thing}| %>\n\t$0\n<% end %>\n",
    "description": "ERB each block"
  },
  "else": {
    "prefix": "else",
    "body": "<% else %>",
    "description": "ERB else tag"
  },
  "elsif": {
    "prefix": "elsif",
    "body": "<% elsif ${1:true} %>",
    "description": "ERB elsif tag"
  },
  "end": {
    "prefix": "end",
    "body": "\n<% end %>\n",
    "description": "ERB end tag"
  },
  "t": {
    "prefix": "t",
    "body": "<%= t('$0') %>",
    "description": "output ERB translation tags"
  },
  "ff": {
    "prefix": "ff",
    "body": "<%= form_for(${1:@things}) do |${2:f}| %>\n\t\t$3\n<% end %>\n  ",
    "description": "output form_for ERB"
  },
  "ife": {
    "prefix": "ife",
    "body": "\n<% if $1 %>\n\t$2\n<% else %>\n\t$0\n<% end %>\n",
    "description": "ERB if / else / end"
  },
  "if": {
    "prefix": "if",
    "body": "\n<% if $1 %>\n\t$0\n<% end %>\n",
    "description": "ERB if / end"
  },
  "lblt": {
    "prefix": "lblt",
    "body": "<%= label_tag :${1:thing}, \"${2:Your label text}\" %>",
    "description": "insert a rails view label_tag helper"
  },
  "lt": {
    "prefix": "lt",
    "body": "<%= link_to $1, $2 %>",
    "description": "insert a rails view link_to helper"
  },
  "pft": {
    "prefix": "pft",
    "body": "<%= password_field_tag :${1:thing} %>",
    "description": "insert a rails view password_field_tag helper"
  },
  "st": {
    "prefix": "st",
    "body": "<%= submit_tag \"${1:My Button Text}\", class: \"${2:class}\" %>",
    "description": "insert a rails view submit_tag helper"
  },
  "tft": {
    "prefix": "tft",
    "body": "<%= text_field_tag \"${1:name}\", \"${2:value}\", placeholder: \"${3:placeholder}\", class: \"${4:class}\" %>",
    "description": "insert a rails view text_field_tag helper"
  },
  "unless": {
    "prefix": "unless",
    "body": "\n<% unless $1 %>\n\t$0\n<% end %>\n",
    "description": "ERB unless / end"
  }
}


// For more, take a look at DHH's config: https://github.com/dhh/textmate-rails-bundle